{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "plugin:json/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/prefer-default-export": 0,
        "prettier/prettier": [
            "warn",
            {
              "singleQuote": true,
              "semi": true
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
